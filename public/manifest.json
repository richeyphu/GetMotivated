{
  "manifest_version": 3,

  "name": "Get Motivated",
  "description": "Be motivated...",
  "version": "0.1.0",
  "author": "Phu & Unn",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "options_ui": {
    "page": "options/index.html"
  },

  "action": {
    "default_popup": "popup/index.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "background": {
    "service_worker": "background/index.js"
  },

  "permissions": ["storage"],

  "host_permissions": ["<all_urls>"]
}
